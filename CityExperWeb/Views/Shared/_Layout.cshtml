    @RenderSection("Scripts", required: false)

    <script>
        $('#sorguform').change(function () {
            var value = $(this).val();

            if (value == 1) {
                $("#AdresForm").show();
                $("#KadastroForm").hide();
                $("#NitelikForm").hide();
            }
            else if (value == 2) {
                $("#AdresForm").hide();
                $("#KadastroForm").show();
                $("#NitelikForm").hide();
            }
            else if (value == 3) {
                $("#AdresForm").hide();
                $("#KadastroForm").hide();
                $("#NitelikForm").show();

            }
            else {
                $("#AdresForm").hide();
                $("#KadastroForm").hide();
                $("#NitelikForm").hide();
            }
        });

        $("#search-btn").click(function () {
            if (document.getElementById("tasinmazForm").style.display == "none") {
                $("#tasinmazForm").show();
            }
            else {
                $("#tasinmazForm").hide();
            }
        });

        $('#oneCikanListe').fadeIn();

        $('#oneCikanButton').click(function () {
            var resultMap = "";
            var resultOneCikanListe = "";

            if ($('#main-map').attr('class').includes("9")) {
                resultMap = $('#main-map').attr('class').replace('9', '6');
                resultOneCikanListe = $('#oneCikanListe').attr('class').replace('3', '6');
            }
            else {
                resultMap = $('#main-map').attr('class').replace('6', '9');
                resultOneCikanListe = $('#oneCikanListe').attr('class').replace('6', '3');
            }
            $('#main-map').removeAttr('class');
            $('#main-map').attr('class', resultMap);

            $('#oneCikanListe').removeAttr('class');
            $('#oneCikanListe').attr('class', resultOneCikanListe);
        });

        $('#closeLoginForm').click(function () {
            if (document.getElementById("LoginForm").style.display == "block") {
                document.getElementById("LoginForm").style.display = "none";
            }
        });

        $('#closeSignUpForm').click(function () {
            document.getElementById("SignUpForm").style.display = "none";
            document.getElementById("oneCikanFormu").style.display = "block";

        });

        function LoginOpenForm() {

            if (document.getElementById("LoginForm").style.display == "none") {
                document.getElementById("oneCikanFormu").style.display = "none";
                document.getElementById("LoginForm").style.display = "block";
                if (document.getElementById("SignUpForm").style.display = "block") {
                    document.getElementById("SignUpForm").style.display = "none";
                }
            }
            else {
                document.getElementById("LoginForm").style.display = "none";
            }
        }

        function LoginCloseForm() {
            document.getElementById("LoginForm").style.display = "none";
            document.getElementById("oneCikanFormu").style.display = "block";
        }

        function SignUpOpenForm() {
            if (document.getElementById("SignUpForm").style.display == "none") {
                document.getElementById("SignUpForm").style.display = "block";
                document.getElementById("oneCikanFormu").style.display = "none";
                if (document.getElementById("LoginForm").style.display = "block") {
                    document.getElementById("LoginForm").style.display = "none";
                }
            }
            else {
                document.getElementById("SignUpForm").style.display = "none";
            }
        }

        function SignUpCloseForm() {
            document.getElementById("SignUpForm").style.display = "none";
            document.getElementById("oneCikanFormu").style.display = "block";
        }

    </script>
    <script src="~/Assets/js/main.js"></script>
</body>
