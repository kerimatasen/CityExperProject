       @*Giriş ekranım*@
    <div class="login-popup" id="LoginForm" style="display: none; margin-top:5%">
        <div class="widget widget-box box-container widget-form form-main" style="width:105%">
            <div class="widget-header">
                <h2>Giriş</h2>
                <i id="closeLoginForm" class="fa fa-times" aria-hidden="true" style="position: absolute;right: 0;top: 0px; cursor:pointer;"></i>
            </div>
            <form action="#" method="post" class="form-additional">
                <div class="control-group">
                    <label class="control-label" for="inputUsername2">Kullanıcı Adı</label>
                    <div class="controls">
                        <input type="text" name="username" value="" class="form-control" id="inputUsername2"
                               placeholder="Kullanıcı Adı/E-mail" />
                    </div>
                </div>
                <div class="control-group">
                    <label class="control-label" for="inputPassword1">Şifre</label>
                    <div class="controls">
                        <input type="password" name="password" value="" class="form-control" id="inputPassword1"
                               placeholder="Şifre" />
                    </div>
                </div>
                <div class="control-group">
                    <div class="controls">
                        <div class="checkbox">
                            <label>
                                <input type="checkbox" name="remember" id="remember" value="true" /> Beni hatırla
                            </label>
                        </div>
                    </div>
                </div>
                <div class="control-group">
                    <button type="submit" class="btn btn-danger">Giriş yap</button>
                    <a href="#"><em>Şifreni mi unuttun?</em></a>
                </div>

            </form>
        </div>
    </div>

    @*üye ekranım*@
    <div class="signup-popup" id="SignUpForm" style="display: none; margin-top:5%">
        <div class="widget  widget-box box-container widget-form form-main" style="width: 105%;">
            <div class="widget-header">
                <h2>Kayıt Ol</h2>
                <i id="closeSignUpForm" class="fa fa-times" aria-hidden="true" style="position: absolute;right: 0;top: 0px; z-index:10;cursor:pointer;"></i>
            </div>
            <form action="#" method="post" class="form-additional">
                <div class="control-group">
                    <label class="control-label">İsim</label>
                    <div class="controls">
                        <input type="text" name="name_name" value="" class="form-control" id="inputName"
                               placeholder="İsim" />
                    </div>
                </div>
                <div class="control-group">
                    <label class="control-label">Soyisim</label>
                    <div class="controls">
                        <input type="text" name="name_surname" value="" class="form-control" id="inputNameSurname"
                               placeholder="Soyisim" />
                    </div>
                </div>
                <div class="control-group">
                    <label class="control-label">Kullanıcı Adı</label>
                    <div class="controls">
                        <input type="text" name="username" value="" class="form-control" id="inputUsername"
                               placeholder="Kullanıcı Adı" />
                    </div>
                </div>
                <div class="control-group">
                    <label class="control-label">E-mail</label>
                    <div class="controls">
                        <input type="text" name="mail" value="" class="form-control" id="inputMail"
                               placeholder="E-mail" />
                    </div>
                </div>
                <div class="control-group">
                    <label class="control-label" for="inputPassword2">Şifre</label>
                    <div class="controls">
                        <input type="password" name="password" value="" class="form-control" id="inputPassword2"
                               placeholder="Şifre" autocomplete="off" />
                    </div>
                </div>
                <div class="control-group">
                    <label class="control-label">Şifrenizi tekrar giriniz</label>
                    <div class="controls">
                        <input type="password" name="password_confirm" value="" class="form-control"
                               id="inputPasswordConfirm" placeholder="Şifrenizi tekrar giriniz" autocomplete="off" />
                    </div>
                </div>
                <div class="control-group">
                    <label class="control-label">Adres</label>
                    <div class="controls">
                        <textarea name="address" cols="10" rows="4" placeholder="Adres"
                                  class="form-control"></textarea>
                    </div>
                </div>

                <div class="control-group">
                    <label class="control-label">Telefon numarası (Alan koduyla giriniz)</label>
                    <div class="controls">
                        <input type="text" name="phone" value="" class="form-control" id="inputPhone"
                               placeholder="Telefon numarası" />
                    </div>
                </div>
                <div class="control-group">
                    <label class="control-label captcha">
                        <img src="Assets/img/placeholders/120x35.png" width="120"
                             height="35" style="border:0;" alt=" " />
                    </label>
                    <div class="controls">
                        <input class="captcha form-control" name="captcha" type="text"
                               placeholder="Resimdeki kodu giriniz" value="" />
                    </div>
                </div>
                <div class="control-group">
                    <div class="controls">
                        <button type="submit" class="btn btn-danger">Kayıt ol</button>
                        <button type="reset" class="btn btn-success">Sıfırla</button>
                    </div>
                </div>
            </form>
        </div>
    </div>
    <script src="Assets/js/jquery-2.2.1.min.js"></script>
