
@{
    ViewBag.Title = "TasinmazDurum";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section TasinmazOpenPage{

    <div class="col-md-4" style="margin-top: 1%;border:1px solid black; height:790px;">
        <div class="property-slider-box">
            <div id="property-slider" class="property-slider carousel slide" data-ride="carousel">
                <div class="carousel-inner" role="listbox">

                    <div class="item active">
                        <img src="Assets/img/placeholders/120x35.png" alt="Sunset over beach" />
                    </div>
                    <div class="item">
                        <img src="Assets/img/placeholders/120x35.png" alt="Sunset over beach" />
                    </div>
                    <div class="item">
                        <img src="Assets/img/placeholders/120x35.png" alt="Rob Roy Glacier" />
                    </div>
                    <div class="item">
                        <img src="Assets/img/placeholders/120x35.png" alt="Longtail boats at Phi Phi" />
                    </div>
                </div>
                <a class="left carousel-control" href="#property-slider" role="button"
                   data-slide="prev">
                    <span class="icon-prev" aria-hidden="true"></span>
                    <span class="sr-only">Previous</span>
                </a>
                <a class="right carousel-control" href="#property-slider" role="button"
                   data-slide="next">
                    <span class="icon-next" aria-hidden="true"></span>
                    <span class="sr-only">Next</span>
                </a>
            </div>
        </div>
        <div class="aciklamalar" style="margin:10% 0%;">
            <h3>
                Vucino Han
            </h3>
            <p>
                İlçe : Beyoğlu
            </p>
            <p>
                Mahalle : Tomtom mahallesi
            </p>
            <p>
                No : 193
            </p>
            <p> Kapalı Alan: 60 m2, Açık Alan: 0 m2 </p>

            <h4>Mal Sahibi:</h4>
        </div>
    </div>
    <div class="col-md-3" style="margin-top: 1%; border:1px solid black; height:790px;">
        <div class="card" style="width: 18rem;">
            <div class="card-body">
                <h5 class="card-title">Card title</h5>
                <h6 class="card-subtitle mb-2 text-muted">Card subtitle</h6>
                <p class="card-text">Some quick example text to build on the card title and make up the bulk of the card's content.</p>
                <a href="#" class="card-link">Card link</a>
                <a href="#" class="card-link">Another link</a>
            </div>
        </div>
    </div>
    <div class="col-md-1" style="margin-top: 1%;">
        <div class="places_select" style="margin-left:1.5%; margin-top:1%;">
            <div class="btn-group-vertical">
                <a class="btn btn-large" style="margin-top:2%;" data-rel="Durum"> Durum</a>
                <a class="btn btn-large" style="margin-top:2%;" data-rel="park"> Detay</a>
                <a class="btn btn-large" style="margin-top:2%;" data-rel="atm,bank"> Kullanım</a>
                <a class="btn btn-large" style="margin-top:2%;" data-rel="gas_station">Tapu</a>
            </div>
        </div>
    </div>
}
@section Scripts
{
    <script>
        $(document).ready(function () {
            var resultMap = $('#main-map').attr('class').replace('12', '4');
            $('#main-map').removeAttr('class');
            $('#main-map').attr('class', resultMap);
        });
    </script>

}

